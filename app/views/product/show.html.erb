<div class="single contact">
<div class="container">
<div class="single-main">
<div class="col-md-9 single-left">
<div class="sngl-top">
<div class="col-md-5 single-top-left">




<div class="flexslider">


    <div class="thumb-image"> <%= image_tag @product.img, class: "img-responsive"%> </div>

</div>




</div>
<div class="col-md-7 single-top-right">
    <div class="single-para simpleCart_shelfItem">
        <h2> <%= @product.title %></h2>
        <div class="star-on">
            <ul class="star-footer">
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
                <li><a href="#"><i> </i></a></li>
            </ul>
            <div class="review">
            <a href="#"> 1 customer review</a>
            </div>
            <div class="clearfix"> </div>
            </div>

            <h5 class="item_price">$ <%= @product.price %> </h5>
            <% if @product.old_price %>
                <del><%= @product.old_price %> </del>
            <% end %>
            <p><%= @product.content %> </p>
            <div class="available">
                <ul>
                    <li>Color
                    <select>
                        <option>Silver</option>
                        <option>Black</option>
                        <option>Dark Black</option>
                        <option>Red</option>
                    </select>
                    <li>
                    <div class="clearfix"> </div>
                </ul>
                </div>
                <ul class="tag-men">
                <li><span>CATEGORY</span>
                <strong>:
                </strong>
                </li>
                </ul>
                <div class="quantity">
                    <input type="number" size="4" value="1" name="quantity" min="1" step="1">

                </div>

            <%= link_to'ADD TO CART',   cart_items_path,
                                            remote: true, 
                                            data: { method: :post, id: @product.id },
                                            class:   "add-cart item_add add-to-cart-link",
                                            id:       "productAdd"%>

                </div>
                </div>
            <div class="clearfix"> </div>
        </div>
    <div class="tabs">
        <ul class="menu_drop">
            <li class="item1"><a href="#"><img src="<%= asset_path "arrow.png" %>" alt=""> Description</a>
            
            </li>
            <li class="item2"><a href="#"><img src="<%= asset_path "arrow.png" %>" alt="">Additional Information</a>
            
            </li>
            <li class="item3"><a href="#"><img src="<%= asset_path "arrow.png" %>" alt="">Reviews</a>
        
            </li>
            
            </li>
        </ul>
    </div>
<% unless @product.related.nil? %>
    

    <div class="latestproducts">
        <div class="product-one">
            <h3>Related Product</h3>
            <% @product.related.each do |related| %>
            <div class="col-md-4 product-left p-left">
                <div class="product-main simpleCart_shelfItem">
                    <a href="<%= related.id%>" class="mask">
                        <img class="img-responsive zoom-img" src="<%= asset_path related.img %>" alt="" />
                        </a>
                    <div class="product-bottom">
                        <h3><a href="<%= related.id %>"><%= related.title %></a></h3>
                        <p>Explore Now</p>
                        <h4>
                        <a class="item_add add-to-cart-link" href="cart/add?id=<%= related.id %>" data-id="<%= related.id%>">  <i> </i>
                        </a>
                        <span class="item_price">$ <%= related.price %></span>
                        <% if related.old_price %>
                            <del><%= related.old_price %> </del>
                        <% end %>
                        </h4>
                    </div>
                <div class="srch">
                <span>-50%</span>
                </div>
            </div>
        </div>
    <% end %>
    <div class="clearfix"> </div>
    </div>
</div>
<% end %>

<% if recent_products.any? %>

    <div class="latestproducts">
        <div class="product-one">
            <h3> Recently Products</h3>

            <% recent_products.each do |recently| %>


            <div class="col-md-4 product-left p-left">
                <div class="product-main simpleCart_shelfItem">
                    <a href="<%= recently.id%>" class="mask">
                        <img class="img-responsive zoom-img" src="<%= asset_path recently.img %>" alt="" />
                    </a>
                    <div class="product-bottom">
                        <h3><a href="<%= recently.id %>"><%= recently.title %></a></h3>
                        <p>Explore Now</p>
                        <h4>
                        <a class="item_add add-to-cart-link" href="cart/add?id=<%= recently.id %>" data-id="<%= recently.id%>">  <i> </i>
                        </a>
                        <span class="item_price">$ <%= recently.price %></span>
                        <% if recently.old_price %>
                            <del><%= recently.old_price %> </del>
                        <% end %>
                        </h4>
                    </div>
                <div class="srch">
                <span>-50%</span>
                </div>
            </div>
        </div>
    <% end %>
    <div class="clearfix"> </div>
    </div>
</div>
<% end %>
</div>

